<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/son_two">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:background="@color/blue_light"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/imgTaxiDriver1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_cartaxi"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgTaxiDriver1"
            android:layout_toEndOf="@+id/imgTaxiDriver1"
            android:text="bienvenido a akitaxi"
            android:textAllCaps="true"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:id="@+id/imgTaxiDriver2"
        android:src="@mipmap/ic_cartaxi"

        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffe5e5df"
        android:layout_marginTop="1dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="956886883"
            android:drawableLeft="@mipmap/ic_panel_phone"
            android:drawableStart="@mipmap/ic_panel_phone"
            android:id="@+id/textView6"
            android:drawablePadding="-30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:paddingLeft="10dp"
            android:textColorHighlight="#ff93d156"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Toyota-Mitsubishi"
            android:drawablePadding="-10dp"
            android:id="@+id/textView7"
            android:drawableLeft="@mipmap/ic_panel_car"
            android:drawableStart="@mipmap/ic_panel_car"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_panel_bussines"
            android:drawableStart="@mipmap/ic_panel_bussines"
            android:layout_gravity="center_vertical"
            android:text="Empresa"
            android:drawablePadding="-30dp"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EA-2398359"
            android:drawablePadding="-30dp"
            android:drawableLeft="@mipmap/ic_panel_car"
            android:drawableStart="@mipmap/ic_panel_car"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Alvaro Rodriges Morales Caballero"
        android:id="@+id/textView10"
        android:padding="10dp"
        android:layout_below="@+id/imgTaxiDriver2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/white"
        android:drawablePadding="-20dp"
        android:drawableLeft="@mipmap/ic_panel_user"
        android:drawableStart="@mipmap/ic_panel_user"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Llamar al Taxista"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_call_blue"
        android:layout_marginTop="15dp"
        android:textColor="#fff7ffff"
        android:textSize="20sp" />

</RelativeLayout>